---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
  title="Blog - Yogesh Kaddipudi"
  description="All blog posts and articles"
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <h1
        class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6"
      >
        Blog
      </h1>
      <p
        class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed"
      >
        Thoughts, insights, and tutorials about web development, technology, and
        life.
      </p>
    </div>

    <!-- Posts Grid -->
    {
      posts.length > 0 ? (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
          {posts.map((post) => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              updatedDate={post.data.updatedDate}
              heroImage={post.data.heroImage?.src}
              slug={post.id}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-gray-600 dark:text-gray-400 text-lg">
            No blog posts yet. Check back soon!
          </p>
        </div>
      )
    }
  </div>
</Layout>
