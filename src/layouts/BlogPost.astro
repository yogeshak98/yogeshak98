---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: {
    src: string;
    width: number;
    height: number;
    format: string;
  };
}

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<Layout title={title} description={description} image={heroImage?.src}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Back to Blog Link -->
    <div class="mb-8">
      <a
        href="/blog"
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline font-medium"
      >
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
            clip-rule="evenodd"></path>
        </svg>
        Back to Blog
      </a>
    </div>

    <!-- Article Header -->
    <header class="mb-12">
      {
        heroImage && (
          <div class="aspect-video mb-8 overflow-hidden rounded-lg">
            <img
              src={heroImage.src}
              alt={title}
              class="w-full h-full object-cover"
            />
          </div>
        )
      }

      <div class="text-center">
        <h1
          class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight"
        >
          {title}
        </h1>

        <div
          class="flex items-center justify-center text-gray-600 dark:text-gray-400 space-x-4"
        >
          <time datetime={pubDate.toISOString()}>
            {formatDate(pubDate)}
          </time>
          {
            updatedDate && (
              <>
                <span>â€¢</span>
                <span>Updated {formatDate(updatedDate)}</span>
              </>
            )
          }
        </div>
      </div>
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg max-w-none prose-gray dark:prose-invert mx-auto">
      <slot />
    </div>

    <!-- Article Footer -->
    <footer class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="text-center">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Thanks for reading! Feel free to share this post if you found it
          helpful.
        </p>
        <div class="flex justify-center space-x-4">
          <a
            href="/blog"
            class="px-4 py-2 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors font-medium"
          >
            More Posts
          </a>
          <a
            href="/about"
            class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            About Me
          </a>
        </div>
      </div>
    </footer>
  </article>
</Layout>
